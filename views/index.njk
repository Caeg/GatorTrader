{% extends "template.njk" %}

{% block css %}

{% endblock %}
{% block js %}
    <script>
      $('.container').scroll(function () {
        $(this).css({ 'cursor': 'pointer' });
      });
    </script>
{% endblock %}

{% block container %}

    <div class="container">
        <div class="row mt">
            <div class="col">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100 h-100" src="/static/img/carousel/pexels-photo-225502.jpeg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100 h-100" src="/static/img/carousel/pexels-photo-546819.jpeg" alt="Second slide">
